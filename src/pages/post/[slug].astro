---
import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';

export async function getStaticPaths() {
  const { data: posts } = await supabase.from('posts').select('slug');
  return posts?.map(post => ({ params: { slug: post.slug } })) || [];
}

const { slug } = Astro.params;

let post;
try {
  const { data, error } = await supabase
    .from('posts')
    .select('*')
    .eq('slug', slug)
    .single();

  if (error) throw error;
  post = data;
} catch (e) {
  console.error('Error fetching post:', e);
  return Astro.redirect('/404');
}

if (!post) return Astro.redirect('/404');
---

<Layout title={`${post.title} | Blog Limpiezas Torrenueva`}>
  <main>
    <!-- Post Hero Section -->
    <div class="post-hero">
        <img src={post.image_url || '/blog-placeholder.jpg'} alt={post.title} class="post-hero__image">
        <div class="post-hero__overlay"></div>
        <div class="container post-hero__content">
            <span class="post-tag">{post.tag || 'Blog'}</span>
            <h1 class="post-title">{post.title}</h1>
            <p class="post-date">Publicado el {new Date(post.created_at).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
        </div>
    </div>

    <!-- Article Content -->
    <section class="section-padding post-body-section">
        <div class="container">
            <article class="post-article">
                <div class="article-content" set:html={post.content} />
                
                <div class="post-footer">
                    <a href="/blog" class="button button--primary">‚Üê Volver al Blog</a>
                </div>
            </article>
        </div>
    </section>
  </main>
</Layout>

<style>
    .post-hero {
        position: relative;
        height: 60vh;
        min-height: 400px;
        max-height: 600px;
        display: flex;
        align-items: flex-end;
        color: white;
        overflow: hidden;
    }

    .post-hero__image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
    }

    .post-hero__overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.8) 100%);
        z-index: 1;
    }

    .post-hero__content {
        position: relative;
        z-index: 2;
        padding-bottom: 4rem;
        width: 100%;
    }

    .post-tag {
        display: inline-block;
        background-color: var(--primary);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-weight: 600;
        margin-bottom: 1rem;
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 0.05em;
    }

    .post-title {
        color: white;
        font-size: clamp(2rem, 5vw, 3.5rem);
        line-height: 1.2;
        font-weight: 700;
        margin-bottom: 1rem;
        max-width: 900px;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }

    .post-date {
        font-size: 1.1rem;
        opacity: 0.9;
        font-weight: 400;
    }

    .post-body-section {
        background-color: #f8fafc;
        padding: 4rem 0;
    }

    .post-article {
        max-width: 800px;
        margin: 0 auto;
        background: white;
        padding: 3rem 4rem;
        border-radius: 16px;
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.05), 0 8px 10px -6px rgba(0, 0, 0, 0.01);
    }

    /* Article Typography / Prose Styling */
    .article-content {
        font-size: 1.125rem;
        line-height: 1.8;
        color: #334155;
    }

    .article-content :global(h2) {
        font-size: 1.8rem;
        color: #1e293b;
        margin-top: 2.5rem;
        margin-bottom: 1.25rem;
        font-weight: 700;
        letter-spacing: -0.025em;
    }

    .article-content :global(h3) {
        font-size: 1.4rem;
        color: #1e293b;
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .article-content :global(p) {
        margin-bottom: 1.5rem;
    }

    .article-content :global(ul), .article-content :global(ol) {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    .article-content :global(li) {
        margin-bottom: 0.5rem;
        padding-left: 0.5rem;
    }

    .article-content :global(strong) {
        color: #0f172a;
        font-weight: 600;
    }

    .post-footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid #e2e8f0;
        display: flex;
        justify-content: flex-start;
    }

    @media (max-width: 768px) {
        .post-article {
            padding: 2rem;
        }
        
        .post-title {
            font-size: 2rem;
        }

        .post-hero {
            height: 50vh;
        }
    }
</style>
