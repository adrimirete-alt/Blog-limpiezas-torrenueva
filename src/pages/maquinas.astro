---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Maquinaria | Limpiezas Torrenueva">
    <main>
        <section class="machines-hero">
            <div class="container">
                <div class="machines-hero__content">
                    <h1 class="machines-hero__title">MAQUINARIA INDUSTRIAL <br><span style="color:white">PROFESIONAL</span></h1>
                    <p class="machines-hero__desc">Venta, alquiler y servicio técnico oficial. La mejor tecnología para la limpieza de grandes superficies.</p>
                    <a href="#catalogo" class="button button--white">Ver Catálogo</a>
                </div>
                <div class="machines-hero__image-wrapper">
                    <img src="/maquinas-hero-final.png" alt="Maquinaria Limpiezas Torrenueva">
                </div>
            </div>
        </section>

        <!-- Fleet Image Section (Requested) -->
        <section class="section-padding" style="padding-bottom: 0;">
            <div class="container">
                <div class="center-text">
                     <h2 class="section-title">Nuestra Flota de Maquinaria</h2>
                     <p class="text-body" style="margin: 0 auto 2rem;">Disponemos de una amplia gama de fregadoras y barredoras listas para cualquier intervención.</p>
                </div>
                <div style="border-radius: 8px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
                    <img src="/maquinas-hero-final.png" alt="Flota de Maquinas Limpiezas Torrenueva" style="width: 100%; height: auto; display: block;">
                </div>
            </div>
        </section>

        <!-- Catalog -->
        <section id="catalogo" class="catalog-section">
            <div class="container">
                <div class="catalog-header center-text">
                    <span class="section-tag">Catálogo</span>
                    <h2 class="catalog-title">Modelos Disponibles</h2>
                </div>

                <div class="grid" style="grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;">
                    <!-- Product 1 -->
                    <div class="product-card">
                        <div class="product-img-wrapper">
                            <img src="/fregadora-conductor-final.png" alt="Fregadora Conductor" class="product-img">
                        </div>
                        <div class="product-content">
                            <span class="product-badge">Premium</span>
                            <h3 class="product-title">Fregadora Conductor Sentado T7</h3>
                            <p class="product-desc">Ideal para garajes de más de 2000m². Gran autonomía y ancho de trabajo de 85cm.</p>
                            <div class="price-box">
                                <div class="price-row">
                                    <div class="price-col">
                                        <span class="price-label">Precio</span>
                                        <span class="price-amount">Consultar</span>
                                    </div>
                                    <div class="price-col" style="text-align: right;">
                                        <span class="price-label">Disponibilidad</span>
                                        <span style="color: #10b981; font-weight:700;">En Stock</span>
                                    </div>
                                </div>
                            </div>
                            <div class="product-actions">
                                <a href="/contacto" class="btn-product-dark">Solicitar Info</a>
                            </div>
                        </div>
                    </div>

                    <!-- Product 2 -->
                    <div class="product-card">
                        <div class="product-img-wrapper">
                            <img src="/fregadora-manual-final.png" alt="Fregadora Manual" class="product-img">
                        </div>
                        <div class="product-content">
                            <span class="product-badge">Estándar</span>
                            <h3 class="product-title">Fregadora Manual T300</h3>
                            <p class="product-desc">Compacta y potente. Perfecta para pasillos, supermercados y zonas con obstáculos.</p>
                            <div class="price-box">
                                <div class="price-row">
                                    <div class="price-col">
                                        <span class="price-label">Precio</span>
                                        <span class="price-amount">Consultar</span>
                                    </div>
                                    <div class="price-col" style="text-align: right;">
                                        <span class="price-label">Disponibilidad</span>
                                        <span style="color: #10b981; font-weight:700;">En Stock</span>
                                    </div>
                                </div>
                            </div>
                            <div class="product-actions">
                                <a href="/contacto" class="btn-product-dark">Solicitar Info</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </main>
</Layout>
